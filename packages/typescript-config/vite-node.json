{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Vite Node",
  "extends": "./base.json",
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node", "vite/client"]
  },
  "include": ["vite.config.ts"]
} 