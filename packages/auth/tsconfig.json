{
  "extends": "../typescript-config/base.json",
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "jsx": "react-jsx",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@hooks/*": [
        "./src/hooks/*"
      ],
      "@components/*": [
        "./src/components/*"
      ],
      "@types/*": [
        "./src/types/*"
      ]
    },
    "outDir": "./dist",
    "rootDir": "./"
  },
  "include": [
    "src/**/*",
    "vitest.config.ts",
    "src/setupTests.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}