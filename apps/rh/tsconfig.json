{
  "extends": "../../packages/typescript-config/react-library.json",
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@components/*": ["./src/components/*"],
      "@contexts/*": ["./src/contexts/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@pages/*": ["./src/pages/*"],
      "@services/*": ["./src/services/*"],
      "@utils/*": ["./src/utils/*"],
      "@types/*": ["./src/types/*"],
      "@lib/*": ["./src/lib/*"]
    },
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": [
    "src",
    "vite.config.ts",
    "vitest.config.ts",
    "src/setupTests.ts"
  ],
  "exclude": ["node_modules", "dist"]
}